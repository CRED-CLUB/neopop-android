<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NeoPop" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondary">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="Flat_Stroke_Button">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">40dp</item>
        <item name="neopop_button_position">center</item>
        <item name="neopop_depth">3dp</item>
        <item name="neopop_stroke_color">@color/white</item>
        <item name="neopop_parent_view_color">#0d0d0d</item>
        <item name="neopop_center_surface_color">#0d0d0d</item>
        <item name="android:textColor">@color/white</item>
        <item name="neopop_draw_full_width">true</item>
        <item name="neopop_draw_full_height">true</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Elevated_Stroke_Button">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">33dp</item>
        <item name="neopop_depth">3dp</item>
        <item name="neopop_stroke_color">@color/white</item>
        <item name="neopop_right_surface_color">#E0E0E0</item>
        <item name="android:clickable">true</item>
        <item name="neopop_bottom_surface_color">#8A8A8A</item>
        <item name="neopop_parent_view_color">#0d0d0d</item>
