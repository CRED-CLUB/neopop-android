    <style name="TiltFloatingButton">
        <item name="android:layout_height">63dp</item>
        <item name="neopop_center_surface_color">#FFEB34</item>
        <item name="neopop_center_surface_rotation">18.8</item>
        <item name="neopop_bottom_surface_rotation">32</item>
        <item name="neopop_shimmer_width">50dp</item>
        <item name="android:clickable">true</item>
        <item name="neopop_show_shimmer">true</item>
        <item name="neopop_shadow_height">13dp</item>
        <item name="neopop_depth">8dp</item>
        <item name="neopop_top_shimmer_color">@color/white</item>
        <item name="neopop_gravity">on_space</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="TiltNonFloatingButton">
        <item name="android:layout_height">50dp</item>
        <item name="neopop_center_surface_color">@color/white</item>
        <item name="neopop_center_surface_rotation">18.8</item>
        <item name="android:clickable">true</item>
        <item name="neopop_bottom_surface_rotation">32</item>
        <item name="neopop_show_shimmer">false</item>
        <item name="neopop_depth">8dp</item>
        <item name="neopop_gravity">on_ground</item>
    </style>


    <style name="TiltStrokeButton">
        <item name="android:layout_height">63dp</item>
        <item name="neopop_center_surface_color">@color/pop_black</item>
        <item name="neopop_center_surface_rotation">18.8</item>
        <item name="android:clickable">true</item>
        <item name="neopop_bottom_surface_rotation">32</item>
        <item name="neopop_show_shimmer">true</item>
        <item name="neopop_depth">8dp</item>
        <item name="neopop_shadow_height">13dp</item>
        <item name="neopop_top_shimmer_color">@color/white</item>
        <item name="neopop_stroke_color">#8DD04A</item>
        <item name="neopop_bottom_surface_color">#3F6915</item>
