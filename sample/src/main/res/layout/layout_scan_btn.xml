<?xml version="1.0" encoding="utf-8"?>
<club.cred.neopop.PopFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ScanBtn"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_scan_icon" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/ic_scan_text" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_pop_right" />
    </LinearLayout>


</club.cred.neopop.PopFrameLayout>
